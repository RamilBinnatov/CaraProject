@model List<Product>

@foreach (var item in Model)
{
    <li class="search-nameli">
        <a style="color: #E3E6F3 " asp-controller="ShopDetail" asp-action="Index" asp-route-id="@item.Id">
            <img src="~/assets/img/products/@item.ProductImages.FirstOrDefault(m=>m.IsMain).Image" alt="banner" width="100" height="100">
            <p> @item.Title</p> 
            <p>@item.Price$</p>
        </a>
    </li>
}


