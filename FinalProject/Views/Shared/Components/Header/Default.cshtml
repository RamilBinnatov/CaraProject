<section id="header" style="position:relative;">
    <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/logo.png" class="logo" alt=""></a>
    <div>
        <ul id="navbar">
            <li>
                <div class="header-right " >
                    <div class="input form">
                        <input type="text" class="search-name search-area" id="searchinp" placeholder="Search...">
                    </div>
                    <div class="search-list" style="padding:0;">
                        <ul class="d-block search-list-p" id="searchList"></ul>
                    </div>
                </div>
            </li>
            <li><a class="nav active" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="nav" asp-controller="Shop" asp-action="Index">Shop</a></li>
            <li><a class="nav" asp-controller="Blog" asp-action="Index">Blog</a></li>
            <li><a class="nav" asp-controller="About" asp-action="Index">About</a></li>
            <li><a class="nav" asp-controller="Contact" asp-action="Index">Contact</a></li>
            <li id="lg-bag"><a asp-controller="Basket" asp-action="Index"><i class="fa-solid fa-bag-shopping"></i></a></li>
            <li class="user-ico">
                <i class="fa-solid fa-user"></i>
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Account" asp-action="LogOut"><span>Log out</span></a></li>
                        <li>@User.Identity.Name</li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                    }


                </ul>
            </li>
            <a href="#" id="close"><i class="fa-solid fa-xmark"></i></a>
        </ul>
    </div>
    <div id="mobile">
        <a href="cart.html"><i class="fa-solid fa-bag-shopping"></i></a>
        <i id="bar" class="fas fa-outdent"></i>
    </div>

</section>
<div class="container">
   
</div>

<style>


    .search-list {
       padding:0 !important;
    }

    .search-list-p {
        width: 100%;
    }

    .search-nameli {
        list-style: none;
        display: flex;
    }
</style>