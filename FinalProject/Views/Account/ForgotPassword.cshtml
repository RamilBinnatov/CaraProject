@model ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="signup">
    <div class="container1">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Forgot Password</h2>
                <form asp-controller="Account" asp-action="ForgotPassword" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="email"><i class="ri-mail-fill"></i></label>
                        <input asp-for="Email" type="email" id="email" placeholder="Your Email" required />
                        <span asp-validation-for="Email" style="color: red"> </span>
                    </div>
                    <div class="form-group form-button">
                        <button type="submit" class="webButton">Confirm</button>
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/assets/img/signing/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Log in" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>



@section css {
    <link href="~/assets/sign-up.css" rel="stylesheet" />
}


