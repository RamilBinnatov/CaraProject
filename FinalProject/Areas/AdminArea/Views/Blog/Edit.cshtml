@model BlogEditVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h3>Blog</h3>
    <div class="card my-2">
        <div class="d-flex">
            <div class="blog-post-item " style="margin-right:10px">
            </div>
        </div>
    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger my-1"></span>
        </div>
        <div class="form-group">
            <label class="my-4" for="exampleInputUsername1">Content</label>
            <textarea class="form-control rounded-0" id="description-area" rows="3" asp-for="Content"></textarea>
            <span class="text-danger my-1" asp-validation-for="Content"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Categories</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
        </div>
        <div class="form-group">
            <label asp-for="Photos" class="drop-container">Photos</label>
            <input class="form-control mybutton" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <button type="submit" class="mybutton">Edit</button>
        <a class="mybutton" asp-controller="Blog" asp-action="Index">Back</a>
    </form>
</div>

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("header-area")
    </script>

    <script>
        CKEDITOR.replace("description-area")
    </script>
    <script>
        var editor = CKEDITOR.instances['description-area'];
        editor.setData("@Html.Raw(Model.Content)");
    </script>

}


