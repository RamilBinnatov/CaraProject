@model BlogDetailVM

@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <div class="card">
        <div class="card-header">
            <h2>Blog detail</h2>
        </div>
        <div class="d-flex">
            @foreach (var item in Model.BlogImages)
            {

                <div class="blog-post-item " style="margin-right:10px;">
                    <div class="blog-thumb " style="width:150px" ;>
                        <img src="~/assets/img/blog/@item.Image">
                    </div>
                </div>
            }
        </div>
        <table class="table table-bordered" style="position:relative; top: 16px; ">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Creator
                    </th>
                    <th>
                        Create Date
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        Tags
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.Raw(Model.Title)
                    </td>
                    <td>
                        <Span>@Model.CategoryName</Span>
                    </td>
                    <td>
                        <Span>@Model.Creator</Span>
                    </td>
                    <td>
                        <Span>@Model.CreateDate</Span>
                    </td>
                    <td>
                        @Html.Raw(Model.Content)
                    </td>
                    <td>
                        @foreach (var item in Model.Tags)
                        {
                            <span>@item.Name</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>


    </div>
    <a asp-action="Index" class="mybutton">Back</a>

</div>



